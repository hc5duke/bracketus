= form_for @seed do |f|
  - if @seed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seed.errors.count, "error")} prohibited this seed from being saved:"
      %ul
        - @seed.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :seed
    = f.number_field :seed
  .field
    = f.label :team
    = f.text_field :team
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :tournament
    = f.text_field :tournament
  .actions
    = f.submit 'Save'
